// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./deb.db"
}

model Customer {
  id String @default(cuid()) @id
  name String
  second_name String
  plan Plan? @relation(fields: [planName], references: [name])
  planName String?
  Debts Int
  Address String
  Region Region? @relation(fields: [regionName], references: [name])
  regionName String?
}

model Region {
  id String @default(cuid()) @id
  name String
  Price Int
}

model Plan {
  id String @default(cuid()) @id
  name String @unique
  price Int
  users Customer[]
}
